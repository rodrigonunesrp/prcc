= simple_form_for(user, as: :user, url: v1_users_path ) do |f|
    - unless f.error_notification.blank?
        .alert.alert-danger role="alert"
            = f.error_notification
    h4
        | Cliente
    hr.mt-1
    = f.input :name, required: true
    = f.input :cpf, required: true
    = f.input :email
    
    h4.mt-5
        | Assinatura
    hr.mt-1
    = f.simple_fields_for :orders do |of|
        = of.input :model, required: true
        = of.input :imei, required: true
        = of.input :anual_price, required: true
        = of.input :payment_number_of_quotas

    = f.submit 'Criar Usu√°rio', id: 'user_submit', class: "btn btn-primary mt-5 mb-5"

